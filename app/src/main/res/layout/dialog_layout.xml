<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/fav_dialog"
        android:layout_width="320dp"
        android:layout_height="217dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"

            >


            <TextView
                android:id="@+id/fav_dia_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="52dp"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/fav_dia_img"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/fav_di_cancle"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_sheet_btn"
                android:backgroundTint="@color/dark_blue"
                android:text="@string/cancel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fav_di_save" />

            <Button
                android:id="@+id/fav_di_save"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/bottom_sheet_btn"
                android:backgroundTint="@color/dark_blue"
                android:text="@string/save"
                app:layout_constraintStart_toStartOf="@+id/fav_di_cancle"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/fav_dia_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/loc_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>